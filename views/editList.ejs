<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container mt-4">
    <form
      class="row g-3 needs-validation"
      action="/listings/<%=listing._id%>?_method=PATCH"
      method="POST"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="col-12 mb-3">
        <label for="inputTitle1" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          value="<%=listing.title%>"
          name="listing[title]"
          id="inputTitle1"
          placeholder="Enter the title"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter the title.</div>
      </div>

      <div class="col-12 mb-3">
        <label for="previewImg" class="form-label">Preview Image</label>
        <br />
        <img
          id="previewImg"
          src="<%=reducedPreviewImage%>"
          alt="Preview Image"
          class="img-fluid rounded border p-2"
        />
      </div>

      <div class="col-12 mb-3">
        <label for="inputImageUrl" class="form-label">Upload New Image</label>
        <input
          type="file"
          class="form-control"
          id="inputImageUrl"
          name="listing[image]"
        />
        <div class="invalid-feedback">Please provide a valid image.</div>
      </div>

      <div class="col-12 mb-3">
        <label for="inputDescription" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="inputDescription"
          aria-label="Description"
          name="listing[description]"
          rows="4"
          required
        >
<%=listing.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter the description.</div>
      </div>

      <div class="col-12 mb-3">
        <label for="inputPrice" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">â‚¹</span>
          <input
            type="text"
            class="form-control"
            aria-label="Rupee amount"
            value="<%=listing.price%>"
            name="listing[price]"
            id="inputPrice"
            required
          />
          <div class="invalid-feedback">Please provide a valid price.</div>
        </div>
      </div>

      <div class="col-12 mb-3">
        <label for="inputLocation" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="inputLocation"
          value="<%=listing.location%>"
          name="listing[location]"
          required
        />
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>

      <div class="col-12 mb-3">
        <label for="inputCountry" class="form-label">Country</label>
        <select
          id="inputCountry"
          class="form-select"
          name="listing[country]"
          required
        >
          <option value="">Choose...</option>
          <option selected value="1"><%=listing.country%></option>
          <option value="2">India</option>
        </select>
        <div class="invalid-feedback">Please select a valid country.</div>
      </div>

      <div class="col-12 d-flex justify-content-between gap-2">
        <button type="submit" class="btn btn-primary w-100">Submit</button>
        <button
          type="submit"
          formaction="/listings/<%=listing._id%>?_method=DELETE"
          class="btn btn-danger w-100"
        >
          Delete
        </button>
      </div>
    </form>
  </div>
  <style>
    .container {
      max-width: 600px;
    }
    .img-fluid {
      max-width: 100%;
      height: auto;
    }
    .form-control,
    .form-select,
    .btn {
      width: 100%;
    }
    .input-group-text {
      min-width: 45px;
    }
  </style>
</body>
