<% layout('/layouts/boilerplate') -%>
<body>
  <div class="container mt-4 p-4 border rounded shadow-sm bg-light">
    <h2 class="text-primary mb-3"><%=listDetail.title%></h2>
    <p><%=listDetail.description%></p>
    <div class="img-container">
      <img
        src="<%=listDetail.image%>"
        alt="<%=listDetail.title%>"
        class="img-fluid rounded mb-3"
      />
    </div>
    <span class="d-block mb-3"
      >Listing owned by <a href="#">@<%=listDetail.owner.username%></a></span
    >

    <p class="h5 mb-3">Price: â‚¹<%=listDetail.price.toLocaleString("en-IN")%></p>
    <p class="h5 mb-3">Location: <%=listDetail.location%></p>
    <p class="h5 mb-3">Country: <%=listDetail.country%></p>

    <% if(currentUser && currentUser._id.equals(listDetail.owner._id)) { %>
    <div class="d-flex justify-content-between mt-4">
      <form
        action="/listings/<%=listDetail._id%>/edit"
        method="get"
        class="flex-grow-1 me-2"
      >
        <button type="submit" class="btn btn-primary w-100">
          Edit this List
        </button>
      </form>
      <form
        action="/listings/<%=listDetail._id%>?_method=DELETE"
        method="POST"
        class="flex-grow-1 ms-2"
      >
        <button type="submit" class="btn btn-danger w-100">
          Delete the List
        </button>
      </form>
    </div>

    <%}%>
  </div>
  <hr />
  <!-- review section -->

  <% if(currentUser) { %>
  <div class="container mt-4 p-4 border rounded shadow-sm bg-light">
    <h3 class="text-center mb-4">Leave a Comment Below</h3>
    <form
      action="/listings/<%=listDetail._id%>/reviews"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="ratingLabel" class="form-label">Rating</label>
        <input
          type="range"
          class="form-range"
          min="1"
          max="5"
          step="1"
          value="5"
          id="ratingLabel"
          name="review[rating]"
          required
        />
        <div class="d-flex justify-content-between">
          <span>1</span>
          <span>2</span>
          <span>3</span>
          <span>4</span>
          <span>5</span>
        </div>
      </div>
      <div class="mb-3">
        <label for="commentLabel" class="form-label">Comment</label>
        <textarea
          class="form-control"
          id="commentLabel"
          rows="3"
          placeholder="Write your comment here..."
          name="review[comment]"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter the comment above.</div>
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-dark">Submit</button>
      </div>
    </form>
  </div>
  <hr />
  <% }%>

  <!-- review display section -->

  <div class="container mt-4">
    <div class="row">
      <div class="col-lg-12">
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-primary text-white py-3">
            <h4 class="card-title mb-0">Customer Reviews</h4>
          </div>
          <div class="card-body">
            <div class="row row-cols-1 row-cols-md-2 g-4">
              <% listDetail.review.forEach(review => { %>
              <div class="col-lg-4">
                <div class="card border-0 rounded shadow-sm h-100">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= review.created_by.username %>
                    </h5>
                    <p class="card-text"><%= review.comment %></p>
                    <p class="card-text">Rating: <%= review.rating %> / 5</p>
                    <form
                      action="/listings/<%=listDetail._id%>/reviews/<%=review._id%>?_method=DELETE"
                      method="post"
                    >
                      <% if(currentUser._id.equals(review.created_by._id)) { %>
                      <button type="submit" class="btn btn-danger">
                        Delete
                      </button>
                      <% }%>
                    </form>
                  </div>
                </div>
              </div>
              <% }); %> <% if (listDetail.review.length === 0) { %>
              <p class="text-muted">No reviews yet.</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <style>
    .img-container {
      width: 100%;
      height: 400px; /* Adjust this value as needed */
      overflow: hidden;
      margin: 10px auto; /* Center the image container */
    }

    .img-container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</body>
